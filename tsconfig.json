{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "sourceMap": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@algorithms/*": [
        "src/algorithms/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "babel.config.js",
    "eslintrc.config.js",
    "jest.config.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
